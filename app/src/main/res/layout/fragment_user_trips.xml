<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/userMenuFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_user_avatar"
        app:layout_constraintTop_toTopOf="@id/titleView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/titleView"
        app:fabCustomSize="32dp"
        app:backgroundTint="@color/colorPrimaryDark"
        app:tint="@android:color/white"
        app:elevation="3dp"
        />

    <TextView
        android:id="@+id/titleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        tools:text="User trips"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/searchView"
        app:layout_constraintRight_toLeftOf="@id/printButton"
        app:layout_constraintLeft_toRightOf="@id/userMenuFab"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/printButton"
        android:contentDescription="@string/print"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_printer"
        android:background="?selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:tint="@color/image_button_tint_color"
        app:layout_constraintRight_toLeftOf="@id/addButton"
        app:layout_constraintTop_toTopOf="@id/titleView"
        app:layout_constraintBottom_toBottomOf="@id/titleView"
        />

    <ImageButton
        android:id="@+id/addButton"
        android:contentDescription="@string/add_trip"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:adjustViewBounds="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_plus"
        android:background="?selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:tint="@color/image_button_tint_color"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/titleView"
        app:layout_constraintBottom_toBottomOf="@id/titleView"
        />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:iconifiedByDefault="false"
        app:queryHint="@string/search_trips"
        />


    <LinearLayout
        android:id="@+id/dateFiltersView"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchView"
        android:gravity="center|start"
        >
        <ImageView
            android:id="@+id/filterImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_filter"
            android:tint="@color/colorEnabledImageButtonTint"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/dateFiltersView"
            app:layout_constraintBottom_toBottomOf="@id/dateFiltersView"
            />

        <Button
            android:id="@+id/filterStartDateButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:text="dd-MM-yyyy"
            android:textColor="@color/colorTextHint"
            android:typeface="monospace"
            app:icon="@drawable/ic_calendar"
            app:iconSize="16dp"
            app:iconTint="#BBDDBB"
            />

        <ImageButton
            android:id="@+id/startDateClearButton"
            style="@style/IconButton"
            android:src="@drawable/ic_x"
            android:padding="8dp"
            android:visibility="invisible"
            tools:visibility="visible"
            />

        <Button
            android:id="@+id/filterEndDateButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textColor="@color/colorTextHint"
            android:text="dd-MM-yyyy"
            android:typeface="monospace"
            app:icon="@drawable/ic_calendar"
            app:iconSize="16dp"
            app:iconTint="#DDBBBB"
            />

        <ImageButton
            android:id="@+id/endDateClearButton"
            style="@style/IconButton"
            android:src="@drawable/ic_x"
            android:padding="8dp"
            android:visibility="invisible"
            tools:visibility="visible"
            />
    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateFiltersView"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_trip"
            android:paddingBottom="16dp"
            android:clipToPadding="false"
            />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@drawable/gradient_v_white_to_transparent"
        app:layout_constraintTop_toBottomOf="@id/dateFiltersView"
        />

    <TextView
        android:id="@+id/noResultsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorTextHint"
        tools:text="No results"
        app:layout_constraintTop_toTopOf="@id/dateFiltersView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        tools:visibility="visible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>